{
  "output": {
    "filePath": "repomix.xml",
    "style": "xml",
    "removeComments": true,
    "removeEmptyLines": true,
    "showLineNumbers": true,
    "copyToClipboard": false,
    "headerText": "Fresh Project Home Showcase"
  },
  "include": [
    "package.json",
    "angular.json",
    "tsconfig.json",
    "tsconfig.app.json",
    "tailwind.config.js",
    "vite.config.ts",
    "src/**/*.{ts,tsx,css,svg}"

  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "*.test.*",
      "*.spec.*",
      "coverage/**",
      "dist/**",
      ".env*",
      "*.db",
      "*.sqlite"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}
