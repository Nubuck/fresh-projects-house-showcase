70:   @Output() roomSelected = new EventEmitter<string>();
71:   activeRoomSignal = signal('');
72:   // Reference dimensions of the original floorplan images
73:   private referenceWidth = 800;
74:   private referenceHeight = 550;
75:   private cdr = inject(ChangeDetectorRef);
76:   ngOnChanges(changes: SimpleChanges): void {
77:     if (changes['orientation']) {
